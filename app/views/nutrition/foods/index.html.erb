<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>

<table>
  <thead>
    <tr>
      <th>Food group</th>
      <th>Description</th>
      <th>Summary</th>
      <th>Aliases</th>
      <th>Manufacturer</th>
      <th>Is complete</th>
      <th>Waste description</th>
      <th>Waste yield</th>
      <th>Origin</th>
      <th>Nitrogen protein yield</th>
      <th>Protein calorie yield</th>
      <th>Fat calorie yield</th>
      <th>Carb calorie yield</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.food_group %></td>
        <td><%= food.description %></td>
        <td><%= food.summary %></td>
        <td><%= food.aliases %></td>
        <td><%= food.manufacturer %></td>
        <td><%= food.is_complete %></td>
        <td><%= food.waste_description %></td>
        <td><%= food.waste_yield %></td>
        <td><%= food.origin %></td>
        <td><%= food.nitrogen_protein_yield %></td>
        <td><%= food.protein_calorie_yield %></td>
        <td><%= food.fat_calorie_yield %></td>
        <td><%= food.carb_calorie_yield %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

